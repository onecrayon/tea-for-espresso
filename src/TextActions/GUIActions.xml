<?xml version="1.0"?>
<action-recipes>
	<!-- GUI actions typically require special classes, so they aren't good examples for what you can do with TEA -->
	
	<action id="com.onecrayon.TextActions.Entab" category="actions.text.generic/actions.text.whitespace/1">
		<class>TEAUserInput</class>
		<title>Spaces To Tabs...</title>
		<setup>
			<action>spaces_to_tabs</action>
			<options>
				<dict>
					<key>operation</key>
					<string>entab</string>
				</dict>
			</options>
			<nib>TEASpacesPerTabsSheet</nib>
			<default_input>SPACESPERTABS</default_input>
		</setup>
	</action>
	
	<action id="com.onecrayon.TextActions.Detab" category="actions.text.generic/actions.text.whitespace/2">
		<class>TEAUserInput</class>
		<title>Tabs To Spaces...</title>
		<setup>
			<action>spaces_to_tabs</action>
			<options>
				<dict>
					<key>operation</key>
					<string>detab</string>
				</dict>
			</options>
			<nib>TEASpacesPerTabsSheet</nib>
			<default_input>SPACESPERTABS</default_input>
		</setup>
	</action>
	
	<action id="com.onecrayon.TextActions.WrapWithAbbreviation" category="actions.text.HTML/tea.insertion">
		<class>TEAUserInput</class>
		<title>Wrap With Abbreviation</title>
		<key-equivalent>control shift a</key-equivalent>
		<setup>
			<action>wrap_with_abbreviation</action>
			<options>
				<dict>
					<key>undo_name</key>
					<string>Wrap With Abbreviation</string>
				</dict>
			</options>
			<nib>TEAEnterAbbreviationSheet</nib>
			<default_input>div</default_input>
		</setup>
	</action>
	
</action-recipes>