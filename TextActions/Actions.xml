<?xml version="1.0"?>
<action-recipes>
	<!-- Format with Tag accepts two extra arguments: tag and tagname (for the undo menu; defaults to capitalized tag)
	You can include attributes in `tag` and the tag will be constructed intelligently
	Duplicate the actions below with different info in the tag argument to format with arbitrary HTML elements -->
	<action id="com.onecrayon.TextActions.TEA.FormatWithTag.Strong" category="actions.text.HTML/actions.text.HTML.formatting">
		<class>TEAforEspresso</class>
		<title>Strong</title>
		<setup>
			<target_action>format_with_tag</target_action>
			<arguments>
				<dict>
					<key>tag</key>
					<string>strong</string>
				</dict>
			</arguments>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.TEA.FormatWithTag.Em" category="actions.text.HTML/actions.text.HTML.formatting">
		<class>TEAforEspresso</class>
		<title>Emphasize</title>
		<setup>
			<target_action>format_with_tag</target_action>
			<arguments>
				<dict>
					<key>tag</key>
					<string>em</string>
					<key>tagname</key>
					<string>Emphasis</string>
				</dict>
			</arguments>
		</setup>
	</action>
	
	<!-- Begin TEA for Espresso standard suite -->
	<action id="com.onecrayon.TextActions.TEA.InsertTagFromWord" category="actions.text.HTML">
		<class>TEAforEspresso</class>
		<title>Insert Tag From Word</title>
		<setup>
			<target_action>insert_tag_from_word</target_action>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.TEA.WrapSelectionInTag" category="actions.text.HTML">
		<class>TEAforEspresso</class>
		<title>Wrap Selection In Tag</title>
		<setup>
			<target_action>wrap_selection_in_tag</target_action>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.TEA.WrapSelectedLinesInTag" category="actions.text.HTML">
		<class>TEAforEspresso</class>
		<title>Wrap Selected Lines In Tag</title>
		<setup>
			<target_action>wrap_selected_lines_in_tag</target_action>
		</setup>
	</action>
</action-recipes>
