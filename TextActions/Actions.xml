<?xml version="1.0"?>
<action-recipes>
	<action id="com.onecrayon.TextActions.FormatWithTag.Strong" category="actions.text.HTML/actions.text.formatting">
		<class>TEAforEspresso</class>
		<title>Strong</title>
		<setup>
			<target_action>format_with_tag</target_action>
			<arguments>
				<dict>
					<key>tag</key>
					<string>strong</string>
				</dict>
			</arguments>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.FormatWithTag.Em" category="actions.text.HTML/actions.text.formatting">
		<class>TEAforEspresso</class>
		<title>Emphasize</title>
		<setup>
			<target_action>format_with_tag</target_action>
			<arguments>
				<dict>
					<key>tag</key>
					<string>em</string>
					<key>undo_name</key>
					<string>Emphasize</string>
				</dict>
			</arguments>
		</setup>
	</action>
	
	<action id="com.onecrayon.TextActions.WrapSelectionInLink" category="actions.text.HTML/tea.wrapping">
		<class>TEAforEspresso</class>
		<title>Wrap Selection In Link</title>
		<key-equivalent>control L</key-equivalent>
		<setup>
			<target_action>wrap_selection_in_link</target_action>
			<arguments>
				<dict>
					<key>text.markdown</key>
					<string>[$SELECTED_TEXT](${1:$URL})$0</string>
				</dict>
			</arguments>
		</setup>
	</action>
	
	<!-- Begin TEA for Espresso standard suite -->
	<action id="com.onecrayon.TextActions.InsertTagFromWord" category="actions.text.HTML/tea.insertion">
		<class>TEAforEspresso</class>
		<title>Insert Tag From Word</title>
		<key-equivalent>control ,</key-equivalent>
		<setup>
			<target_action>insert_tag_from_word</target_action>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.InsertText.BR" category="actions.text.HTML/tea.insertion">
		<class>TEAforEspresso</class>
		<title>Insert BR</title>
		<key-equivalent>control enter</key-equivalent>
		<setup>
			<target_action>insert_text</target_action>
			<arguments>
				<dict>
					<key>undo_name</key>
					<string>Insert BR</string>
				</dict>
			</arguments>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.WrapInSnippet.tag" category="actions.text.HTML/tea.wrapping">
		<class>TEAforEspresso</class>
		<title>Wrap Selection In Tag</title>
		<key-equivalent>control W</key-equivalent>
		<setup>
			<target_action>wrap_selection_in_snippet</target_action>
		</setup>
	</action>
	<action id="com.onecrayon.TextActions.WrapLinesInSnippet.tag" category="actions.text.HTML/tea.wrapping">
		<class>TEAforEspresso</class>
		<title>Wrap Selected Lines In Tag</title>
		<key-equivalent>cmd control W</key-equivalent>
		<setup>
			<target_action>wrap_selected_lines_in_snippet</target_action>
		</setup>
	</action>
</action-recipes>
